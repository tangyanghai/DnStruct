<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CustomTitleView">
        <!--标题-->
        <attr name="title_name" format="string|reference" />
        <!--标题颜色-->
        <attr name="title_color" format="color|reference" />
        <!--标题字体大小-->
        <attr name="title_size" format="dimension" />
        <!--左右图片边距-->
        <attr name="title_img_padding_start" format="dimension" />
        <!--##################左边图片文字,尺寸,颜色,距离,图片位置,图片地址,是否设置默认点击事件##################-->
        <!--左边字体大小-->
        <attr name="title_left_size" format="dimension" />
        <!--左边文字-->
        <attr name="title_left_name" format="string|reference" />
        <!--左边文字是否设置默认点击事件 默认点击事件为退出当前activity-->
        <attr name="title_left_set_default_click_listener" format="boolean"/>
        <!--左边图片相对文字的位置-->
        <attr name="title_left_img_align_text" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <!--左边文字和图片距离-->
        <attr name="title_left_distance" format="dimension" />
        <!--左边字体颜色-->
        <attr name="title_left_color" format="color|reference" />
        <!--左边图片-->
        <attr name="title_left_img" format="reference" />
        <!---########右边图片文字,尺寸,颜色,距离,图片位置,图片地址##################-->
        <!--右边文字-->
        <attr name="title_right_name" format="string|reference" />
        <!--右边图片地址-->
        <attr name="title_right_img" format="reference" />
        <!--右边字体大小-->
        <attr name="title_right_size" format="dimension" />
        <!--右边文字是否设置默认点击事件 默认点击事件为退出当前activity-->
        <attr name="title_right_set_default_click_listener" format="boolean"/>
        <!--左边图片相对文字的位置-->
        <attr name="title_right_img_align_text" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <!--右边文字和图片距离-->
        <attr name="title_right_distance" format="dimension" />
        <!--右边字体颜色-->
        <attr name="title_right_color" format="color|reference" />

    </declare-styleable>

    <style name="title">
        <item name="title_color">@android:color/black</item>
        <item name="title_size">50sp</item>
        <item name="title_img_padding_start">35dp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

</resources>
